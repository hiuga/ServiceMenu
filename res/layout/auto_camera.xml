<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:background="@drawable/camera_background"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <com.android.ServiceMenu.PreviewFrameLayout android:id="@+id/frame_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1">
    <FrameLayout android:id="@+id/frame"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:background="@drawable/border_view_finder">
      <SurfaceView
        android:id="@+id/camera_surface"
        android:visibility="visible" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">
      </SurfaceView>  
    </FrameLayout>
  </com.android.ServiceMenu.PreviewFrameLayout>
    <AbsoluteLayout
    android:layout_width="wrap_content"
    android:layout_height="fill_parent">
    <Button
    	android:id="@+id/camera_success"
     	android:layout_y="20dip"
    	android:layout_width="90dip"   
    	android:layout_height="wrap_content"
    	android:text="@string/auto_success"> 
    </Button>
    <Button
    	android:id="@+id/camera_switch"
     	android:layout_y="140dip"
    	android:layout_width="90dip"   
    	android:layout_height="wrap_content"
    	android:text="@string/camera_switch"> 
    </Button>
    <Button
    	android:id="@+id/camera_take"
     	android:layout_y="180dip"
    	android:layout_width="90dip"   
    	android:layout_height="wrap_content"
    	android:text="@string/camera_take"> 
    </Button>
    <Button
    	android:id="@+id/camera_fail"
    	android:layout_y="260dip"
    	android:layout_width="90dip"
    	android:layout_height="wrap_content"    
    	android:text="@string/auto_fail">
    </Button>
    </AbsoluteLayout>
</LinearLayout>

