<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >  
    
    <TextView android:id="@+id/IMEITitle"
		    android:textAppearance="?android:attr/textAppearanceMediumInverse"
		    android:textColor="@android:color/white"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textStyle="bold"
		    android:gravity = "right"
		    android:textSize="18sp"
		    android:text = "@string/imeiTest_summary"		    
		    />
		    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
		<EditText android:id="@+id/IMEIEdit"
		    android:textAppearance="?android:attr/textAppearanceMediumInverse"
		    android:focusable="true"
		    android:focusableInTouchMode="true"
		    android:textColor="@android:color/white"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:autoText="true"
		    android:singleLine="true"
		    android:gravity = "left"
		    android:maxLength="14"
		    android:numeric="integer"/>
		<Button android:id="@+id/read"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/readIMEI" /> 
		<Button android:id="@+id/update"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/updateIMEI" />
	</LinearLayout>
	<TextView android:id="@+id/IMEIView"
		    android:textAppearance="?android:attr/textAppearanceMediumInverse"
		    android:textColor="@android:color/white"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textStyle="bold"
		    android:gravity = "right"
		    android:textSize="25sp"		    
		    />

	<TextView android:id="@+id/MEIDTitle"
		    android:textAppearance="?android:attr/textAppearanceMediumInverse"
		    android:textColor="@android:color/white"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textStyle="bold"
		    android:gravity = "right"
		    android:textSize="18sp"
		    android:text = "@string/meidTest_summary"
		    android:layout_marginTop = "20dip"
		    />
		    
	<LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:orientation="horizontal">
		<EditText android:id="@+id/MEIDEdit"
		    android:textAppearance="?android:attr/textAppearanceMediumInverse"
		    android:focusable="true"
		    android:focusableInTouchMode="true"
		    android:textColor="@android:color/white"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:autoText="true"
		    android:singleLine="true"
		    android:gravity = "left"
		    android:maxLength="14"
		    android:numeric="integer"/>
		<Button android:id="@+id/meidread"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/readIMEI" /> 
		<Button android:id="@+id/meidupdate"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/updateIMEI" />
	</LinearLayout>
	<TextView android:id="@+id/MEIDView"
		    android:textAppearance="?android:attr/textAppearanceMediumInverse"
		    android:textColor="@android:color/white"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textStyle="bold"
		    android:gravity = "right"
		    android:textSize="25sp"		    
		    />
		    
	<TextView android:id="@+id/IMEI2Title"
		    android:textAppearance="?android:attr/textAppearanceMediumInverse"
		    android:textColor="@android:color/white"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textStyle="bold"
		    android:gravity = "right"
		    android:textSize="18sp"
		    android:text = "@string/imei2Test_summary"	
		    android:layout_marginTop = "20dip"	    
		    />		    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
		<EditText android:id="@+id/IMEI2Edit"
		    android:textAppearance="?android:attr/textAppearanceMediumInverse"
		    android:focusable="true"
		    android:focusableInTouchMode="true"
		    android:textColor="@android:color/white"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:autoText="true"
		    android:singleLine="true"
		    android:gravity = "left"
		    android:maxLength="14"
		    android:numeric="integer"/>
		<Button android:id="@+id/read2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/readIMEI2" /> 
		<Button android:id="@+id/update2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/updateIMEI2" />
	</LinearLayout>
	<TextView android:id="@+id/IMEI2View"
		    android:textAppearance="?android:attr/textAppearanceMediumInverse"
		    android:textColor="@android:color/white"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textStyle="bold"
		    android:gravity = "right"
		    android:textSize="25sp"		    
		    />
		    
	<Button android:id="@+id/IMEI_MEID_update"
			android:layout_marginTop = "20dip"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity ="center"
		    android:text="@string/update_IMEI_MEID" />
</LinearLayout>